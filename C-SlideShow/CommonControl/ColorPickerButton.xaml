<UserControl x:Class="C_SlideShow.CommonControl.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_SlideShow.CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="40">
    <Grid>
        <Button x:Name="ColorPicker_Button" Click="ColorPicker_Button_Click">
            <Border Width="24" Height="15" Margin="2"
                    x:Name="ColorPicker_Border"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="2"
                    Background="White"></Border>
        </Button>
    </Grid>
</UserControl>
