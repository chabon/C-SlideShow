<UserControl x:Class="C_SlideShow.CommonControl.HotkeyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_SlideShow.CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="120">
    <Grid>
        <Border Name="MainBorder"
                Cursor="IBeam"
                Focusable="True"
                GotFocus="MainBorder_GotFocus"
                LostFocus="MainBorder_LostFocus"
                PreviewMouseDown="MainBorder_PreviewMouseDown"
                PreviewKeyDown="MainBorder_PreviewKeyDown"
                Background="White"
                BorderThickness="1"
                BorderBrush="Gray">
            <TextBlock Name="KeyText" HorizontalAlignment="Center"></TextBlock>
        </Border>
    </Grid>
</UserControl>
