<UserControl x:Class="C_SlideShow.CommonControl.NotificationBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_SlideShow.CommonControl"
             mc:Ignorable="d" 
             Height="30"
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <Border x:Name="BaseBorder" Background="White" Opacity="0.8" 
                BorderBrush="Gray" BorderThickness="0,1,0,1">
            <Label x:Name="MessageLabel" FontSize="16" Margin="5,0">null</Label>
        </Border>
    </Grid>
</UserControl>
