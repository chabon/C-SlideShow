<UserControl x:Class="C_SlideShow.MatrixSelecter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_SlideShow"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid Background="White" Width="200" Height="200">
        
        <Grid x:Name="MainGrid" Margin="5,5,5,20">
        </Grid>
        <Label x:Name="MatrixInfoLabel" 
               FontSize="12" 
               Margin="10,0,0,0"
               Content=""
               VerticalAlignment="Bottom"/>

        <Button x:Name="MatrixMaxSizeUpButton" Click="MatrixMaxSizeUpButton_Click" Width="13" Height="13" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="6,4">
            <Label FontSize="13" Margin="-9,-14">+</Label> 
        </Button>
        <Button x:Name="MatrixMaxSizeDownButton" Click="MatrixMaxSizeDownButton_Click" Width="13" Height="13" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="21,4" FontSize="8">
            <Label FontSize="13" Margin="-7,-14">-</Label> 
        </Button>
    </Grid>
</UserControl>
